<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/activity_settings"
    android:background="@drawable/background_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/settings"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/buttonBack"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_change_fraction"
        android:id="@+id/buttonChangeFraction"
        android:onClick="changeFraction"
        android:layout_below="@+id/add_remove_notification_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_button_blue_with_dark_blue_border"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:id="@+id/buttonLogout"
        android:onClick="logoutButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonChangeFraction"
        android:background="@drawable/background_button_blue_with_dark_blue_border"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_margin="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/activity_settings_player_fraction_name"
        android:id="@+id/textView3"
        android:layout_below="@+id/buttonLogout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/fraction_name"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/activity_settings_last_change"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/fraction_when"
        android:layout_below="@+id/fraction_name"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_back"
        android:id="@+id/buttonBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="backButton"
        android:background="@drawable/background_button_blue_with_dark_blue_border" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_notification_add"
        android:id="@+id/add_remove_notification_button"
        android:onClick="addRemoveNotificationButton"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_button_blue_with_dark_blue_border"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_margin="5dp" />

</RelativeLayout>