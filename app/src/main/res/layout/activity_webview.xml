<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".WebView">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vezmi vlajku (QR)"
        android:id="@+id/textViewQR"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/buttonQR"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="qrButton"
        android:background="@drawable/ic_camera"
        android:layout_below="@+id/webViewMap" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="score1"
        android:id="@+id/fraction1_score"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/fraction1_name"
        android:layout_alignParentTop="true"
        android:background="#ff0000"
        android:layout_toStartOf="@+id/space" />

    <Space
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/space" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="score2"
        android:id="@+id/fraction2_score"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/fraction2_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/space"
        android:background="#0000ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Prevzato"
        android:id="@+id/player_score"
        android:layout_below="@+id/fraction1_score"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/player_level" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSettings"
        android:layout_below="@+id/fraction2_score"
        android:layout_alignParentEnd="true"
        android:onClick="settingsButton"
        android:background="@drawable/ic_settings"
        android:layout_alignBottom="@+id/player_level" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Level"
        android:id="@+id/player_level"
        android:layout_below="@+id/fraction2_score"
        android:layout_toStartOf="@+id/buttonSettings"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webViewMap"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textViewQR"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/buttonLayer1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. patro"
        android:id="@+id/buttonLayer1"
        android:layout_below="@+id/player_score"
        android:layout_alignParentStart="true"
        android:onClick="layer1Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. patro"
        android:id="@+id/buttonLayer2"
        android:layout_alignTop="@+id/buttonLayer1"
        android:layout_toStartOf="@+id/space2"
        android:onClick="layer2Button"
        android:layout_alignParentEnd="false"
        android:layout_toEndOf="@id/buttonLayer1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4. patro"
        android:id="@+id/buttonLayer4"
        android:layout_alignTop="@+id/buttonLayer3"
        android:layout_alignParentEnd="true"
        android:onClick="layer4Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. patro"
        android:id="@+id/buttonLayer3"
        android:layout_alignTop="@+id/buttonLayer2"
        android:layout_toEndOf="@+id/space2"
        android:onClick="layer3Button"
        android:layout_toStartOf="@id/buttonLayer4" />

    <Space
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/buttonLayer2"
        android:id="@+id/space2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
